---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import heroLogo from '../assets/hero-logo-v1.png';
import ScrollIndicator from './ScrollIndicator.astro';
---

<div class="h-full font-sans md:flex md:flex-col md:justify-center">
  <main class="relative flex flex-col h-full items-center justify-center">
    <section
      class="grid w-full max-w-350 grid-cols-1 items-center justify-center gap-4 px-16"
      id="heroTitleSection"
    >
      <div 
        class="z-10 flex flex-col items-center text-center" 
        id="heroTextContent"
      >
        <h1
          class="mt-14 font-mono text-2xl font-medium text-teal-500 md:text-3xl md:mt-24"
          id="heroGreeting"
        >
          Hi! I'm <p class="text-gray-800 font-extrabold text-5xl my-5 dark:text-gray-100 md:text-8xl md:w-150 md:my-8">Christian Conchari
          </p>
        </h1>

        <h3 
          class="my-4 font-mono text-2xl font-medium text-teal-500 md:text-3xl md:my-6"
          id="heroSubtitle"
        >
          Software Architect | ML Engineer
        </h3>

        <p
          class="mt-8 font-normal text-md max-w-2xl text-gray-800 dark:text-gray-100 md:text-xl md:mt-10"
          id="heroDescription"
        >
          I'm a <span class="text-teal-400">Full-Stack Developer</span> specializing in building robust web applications and machine learning solutions. With a passion for technology and innovation, I strive to create impactful digital experiences.
        </p>
      </div>
    </section>
    <section
      class="z-0 flex items-center justify-center mt-8"
      id="heroButtonSection"
    >
      <button
        class="m-4 rounded bg-teal-500 px-6 py-3 font-mono text-white hover:bg-teal-600 md:mx-6"
        id="contactButton"
      >
        Contact Me
      </button>
      <button
        class="m-4 rounded border-2 border-teal-500 px-6 py-3 font-mono text-teal-500 hover:bg-teal-100 md:mx-6"
        id="portfolioButton"
      >
        View Portfolio
      </button>
    </section>
    <ScrollIndicator targetId="about"/>
  </main>
</div>
