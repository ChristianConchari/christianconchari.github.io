---
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/src/assets/favicon.ico" media="(prefers-color-scheme: dark)" />
        <link rel="icon" type="image/png" href="/src/assets/favicon-dark.ico" media="(prefers-color-scheme: light)" />
        <meta name="generator" content={Astro.generator} />
        <title>Christian Conchari</title>
    </head>
    <body>
        <Header />
        <slot />
    </body>
</html>

<style is:global>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html,
    body {
        width: 100%;
        height: 100%;
        background-color: #0a0e27;
        color: #a0aec0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    /* Scrollbar styling */
    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: #0a0e27;
    }

    ::-webkit-scrollbar-thumb {
        background: #0ff4d3;
        border-radius: 5px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #0dd4b3;
    }

    /* Link styling */
    a {
        color: #0ff4d3;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #0dd4b3;
    }

    /* Text selection */
    ::selection {
        background-color: #0ff4d3;
        color: #0a0e27;
    }
</style>
