---
interface Props {
  id: string;
  class?: string;
}

const { id, class: className } = Astro.props;
---

<section
  id={id}
  class:list={[
    'min-h-screen px-6 py-20 md:px-16 lg:px-24 xl:px-32 flex items-center',
    className,
  ]}
>
  <div class="w-full max-w-6xl mx-auto">
    <slot />
  </div>
</section>
